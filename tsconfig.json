{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es5", "es6", "dom"],
        "outDir": "./public/dist",
        "inlineSourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "declaration": true
    },

    "include": ["**/*.ts"]
}
