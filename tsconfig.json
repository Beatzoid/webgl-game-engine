{
    "compilerOptions": {
        "target": "es5",
        "module": "CommonJS",
        "lib": ["dom", "ES5", "ES6"],
        "outDir": "./public/dist",
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "declaration": true
    },

    "include": ["**/*.ts"],
    "exclude": ["node_modules", "./public/dist"]
}
