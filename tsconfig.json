{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "lib": ["ESNext", "DOM"],
        "outDir": "public/dist",
        "inlineSourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "declaration": true
    },

    "include": ["**/*.ts"]
}
