{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "outDir": "dist",
        "lib": ["ESNext", "DOM"],
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "paths": {
            "~/*": ["./*"]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": ["**/*.ts"]
}
